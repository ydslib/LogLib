<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#f2f2f2"
    android:paddingTop="0.5dp"
    xmlns:tools="http://schemas.android.com/tools">
    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="2023-08-16 14:51:12"
        android:ellipsize="end"
        android:maxEms="10"
        android:singleLine="true"
        android:textSize="12sp"
        android:paddingHorizontal="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/detail"
        android:background="#7CFC00"
        android:textColor="#000000"
        />
    <TextView
        android:id="@+id/tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/time"
        app:layout_constraintBottom_toBottomOf="@+id/time"
        app:layout_constraintStart_toEndOf="@+id/time"
        android:paddingHorizontal="5dp"
        android:textColor="#000000"
        android:textSize="12sp"
        tools:text="tttttttt"
        android:background="#ffffff"
        />
    <TextView
        android:id="@+id/level"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/tag"
        app:layout_constraintBottom_toBottomOf="@+id/tag"
        app:layout_constraintStart_toEndOf="@+id/tag"
        android:paddingHorizontal="5dp"
        tools:textColor="#FF3300"
        tools:background="#D6D6D6"
        android:textSize="12sp"
        android:gravity="center"
        tools:text="V"
        />
    <TextView
        android:id="@+id/summary"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constrainedWidth="true"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/level"
        app:layout_constraintTop_toTopOf="@+id/level"
        app:layout_constraintBottom_toBottomOf="@+id/level"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="fedsfdsdfdsfdsfdsfdsdfsdfsdfsdfsdfsdfdfsfd"
        android:singleLine="true"
        android:maxLines="1"
        android:ellipsize="end"
        android:background="#FFFFE0"
        android:textColor="#000000"
        android:paddingHorizontal="5dp"
        />
    <TextView
        android:id="@+id/detail"
        android:layout_width="0dp"
        android:background="#000000"
        android:textColor="#ffffff"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/time"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone"
        tools:visibility="gone"
        />
</androidx.constraintlayout.widget.ConstraintLayout>