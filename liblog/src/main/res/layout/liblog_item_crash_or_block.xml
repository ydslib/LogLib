<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f2f2f2"
    android:paddingTop="0.5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <TextView
        android:id="@+id/liblog_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="2023-08-16 14:51:12"
        android:ellipsize="end"
        android:maxEms="10"
        android:singleLine="true"
        android:textSize="12sp"
        android:paddingHorizontal="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/liblog_detail"
        android:background="#7CFC00"
        android:textColor="#000000"
        />
    <TextView
        android:id="@+id/liblog_msg"
        android:layout_width="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/liblog_time"
        app:layout_constraintBottom_toBottomOf="@+id/liblog_time"
        app:layout_constraintStart_toEndOf="@+id/liblog_time"
        android:background="#FFFFE0"
        android:textColor="#FF3300"
        android:textSize="12sp"
        tools:text="tttttttttttttttttttttttttttttttttttttttttttttttt"
        android:paddingHorizontal="5dp"
        />
    <TextView
        android:id="@+id/liblog_detail"
        android:layout_width="0dp"
        android:background="#000000"
        android:textColor="#ffffff"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/liblog_time"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="14sp"
        android:visibility="gone"
        tools:visibility="visible"
        />
</androidx.constraintlayout.widget.ConstraintLayout>